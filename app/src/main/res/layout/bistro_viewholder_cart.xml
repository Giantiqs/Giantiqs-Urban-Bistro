<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/cartholderm"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/pic_cart"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cappuccino" />

    <TextView
        android:id="@+id/title_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="title"
        android:textColor="@color/image_button"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pic_cart"
        app:layout_constraintTop_toTopOf="@+id/pic_cart" />

    <ImageView
        android:id="@+id/minus_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/pic_cart"
        app:layout_constraintStart_toStartOf="@+id/title_cart"
        app:srcCompat="@drawable/minus" />

    <TextView
        android:id="@+id/number_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1"
        android:textColor="@color/image_button"
        app:layout_constraintBottom_toBottomOf="@+id/minus_cart"
        app:layout_constraintStart_toEndOf="@+id/minus_cart"
        app:layout_constraintTop_toTopOf="@+id/minus_cart" />

    <ImageView
        android:id="@+id/plus_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/number_item"
        app:layout_constraintStart_toEndOf="@+id/number_item"
        app:layout_constraintTop_toTopOf="@+id/number_item"
        app:srcCompat="@drawable/plus" />

    <TextView
        android:id="@+id/fee_each_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="0"
        android:textColor="@color/image_button"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_cart" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="P"
        android:textColor="@color/image_button"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/fee_each_item"
        app:layout_constraintEnd_toStartOf="@+id/fee_each_item"
        app:layout_constraintTop_toTopOf="@+id/fee_each_item" />

    <TextView
        android:id="@+id/total_each_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/image_button"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="@+id/plus_cart"
        app:layout_constraintEnd_toEndOf="@+id/fee_each_item"
        app:layout_constraintTop_toTopOf="@+id/plus_cart" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="P"
        android:textColor="@color/image_button"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/total_each_item"
        app:layout_constraintEnd_toStartOf="@+id/total_each_item"
        app:layout_constraintTop_toTopOf="@+id/total_each_item" />
</androidx.constraintlayout.widget.ConstraintLayout>